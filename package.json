{
	"name": "academia-formatting",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "bun run build && wrangler dev",
		"prepare": "bun run types && svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"types": "wrangler types",
		"db:push": "drizzle-kit push",
		"db:prod:push": "bun run --env-file=.env.production drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"deploy": "bun run build && wrangler deploy",
		"cf-typegen": "wrangler types ./src/worker-configuration.d.ts",
		"lint": "bun run biome check",
		"lint:fix": "bun run biome check --fix",
		"format:fix": "bun run biome format --fix"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@inlang/paraglide-js": "^2.6.0",
		"@libsql/client": "^0.15.15",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^22",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vite-plugin-devtools-json": "^1.0.0",
		"wrangler": "^4.59.2"
	}
}
